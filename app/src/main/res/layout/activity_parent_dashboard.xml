<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:andriod="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLoginPage"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".ActivityDashboard">

    <RelativeLayout
        android:id="@+id/linearColumnsearch"
        style="@style/groupStylebluegray_101"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_below="@+id/linearColumnno"
        android:layout_gravity="bottom|start"
        android:layout_marginTop="-24dp"
        android:orientation="vertical">



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/contactSupervisor"
            android:layout_below="@+id/linearColumnsearchChildren"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="2dp"
            tools:listitem="@layout/student_item"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/contactSupervisor"
            style="@style/txtInterextrabold18"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="@dimen/_19pxh"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="7dp"
            android:text="Contact Supervisor" />

        <LinearLayout
            android:id="@+id/linearColumnsearchChildren"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="89dp"
            android:background="@color/gray_401">

            <ImageView
                android:id="@+id/imageSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_16pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_search"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/searchStudents"
                style="@style/txtInterregular15"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2pxh"
                android:layout_marginTop="@dimen/_3pxh"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginBottom="@dimen/_9pxv"
                android:ellipsize="end"
                android:hint="Search for Children"
                android:inputType="textShortMessage"
                android:lineSpacingExtra="@dimen/_4pxh"
                android:singleLine="true" />
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearColumnno"
        style="@style/groupStyledeep_orange_200cornerRadius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginTop="@dimen/_222pxv"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearRowno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_23pxh"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtNo"
                style="@style/txtInterbold16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_weight="0.14"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/lbl_no" />

            <TextView
                android:id="@+id/txtIncident"
                style="@style/txtIntersemibold16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_weight="0.33"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Incident" />

            <TextView
                android:id="@+id/txtTime"
                style="@style/txtIntersemibold16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_41pxh"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_weight="0.21"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/lbl_time" />

            <TextView
                android:id="@+id/txtStudent"
                style="@style/txtIntersemibold16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_42pxh"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_weight="0.33"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/lbl_student" />
        </LinearLayout>

        <View
            android:id="@+id/lineLineSix"
            android:layout_width="@dimen/_355pxh"
            android:layout_height="@dimen/_1pxv"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_5pxh"
            android:layout_marginTop="@dimen/_1pxv"
            android:background="@color/gray_600" />

        <FrameLayout
            android:id="@+id/linearRowlanguageTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22pxh"
            android:layout_marginTop="@dimen/_14pxv"
            android:gravity="end"
            android:orientation="horizontal" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageRectangleFive"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200pxh"
        android:layout_gravity="start"
        android:scaleType="fitXY"
        android:src="@drawable/img_1" />


    <TextView
        android:id="@+id/txtWelcomeuser"
        style="@style/txtInterregular18"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_190pxh"
        android:layout_marginTop="@dimen/_8pxh"
        android:layout_marginEnd="@dimen/_10pxh"
        android:ellipsize="end"
        android:background="#80FFFFFF"
        android:gravity="start"
        android:lineSpacingExtra="@dimen/_4pxh"
        android:singleLine="true"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/btnInboxFour"
        style="@style/btnSolidRounded_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginStart="@dimen/_65pxh"
        android:layout_marginTop="@dimen/_195pxv"
        android:layout_marginEnd="@dimen/_65pxh"
        android:layout_marginBottom="@dimen/_202pxv"
        android:ellipsize="end"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/_4pxh"
        android:paddingStart="@dimen/_30pxh"
        android:paddingTop="@dimen/_6pxv"
        android:paddingEnd="@dimen/_30pxh"
        android:paddingBottom="@dimen/_6pxv"
        android:singleLine="true"
        android:textAllCaps="false"
        tools:ignore="TextSizeCheck"
        android:text="inbox: "/>

</RelativeLayout>

