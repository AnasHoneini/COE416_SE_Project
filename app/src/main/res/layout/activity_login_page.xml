<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:andriod="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLoginPage"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".ActivityLogin">

    <LinearLayout
        android:id="@+id/linearColumnloginOne"
        style="@style/groupStylebluegray_100"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linearColumnlogin"
            style="@style/groupStylewhite_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_16pxh"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearRowlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_36pxh"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_marginEnd="@dimen/_36pxh"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnLoginPage"
                    style="@style/txtInterextrabold12"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_weight="0.44"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:onClick="goToLogin"
                    android:text="Login" />

                <Button
                    android:id="@+id/btnSignupPage"
                    style="@style/txtInterextrabold12_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_70pxh"
                    android:layout_weight="0.44"
                    android:ellipsize="end"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:onClick="goToSignup"
                    android:text="Signup" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearColumnemailaddress"
            style="@style/groupStylewhite_A700"
            android:layout_width="match_parent"
            android:layout_height="289dp"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_14pxv"
            android:layout_marginEnd="@dimen/_16pxh"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtEmailAddress"
                style="@style/txtInterregular12"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_38pxh"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_marginEnd="@dimen/_38pxh"
                android:autofillHints=""
                android:ellipsize="end"
                android:minHeight="48dp"
                android:singleLine="true"
                tools:ignore="LabelFor,TextFields,TextSizeCheck"
                android:text="Email Address" />


            <EditText
                android:id="@+id/myEmailText"
                android:layout_width="@dimen/_257pxh"
                android:layout_height="@dimen/_52pxv"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_32pxh"
                android:layout_marginTop="@dimen/_5pxv"
                android:layout_marginEnd="@dimen/_32pxh"
                android:autofillHints=""
                android:background="@color/gray_401"
                android:hint="@string/enter_your_email_address"
                android:inputType="textEmailAddress"
                android:labelFor="@id/myEmailText"
                tools:ignore="LabelFor,VisualLintTextFieldSize" />


            <TextView
                android:id="@+id/txtPassword"
                style="@style/txtInterregular12"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_38pxh"
                android:layout_marginTop="@dimen/_22pxv"
                android:layout_marginEnd="@dimen/_38pxh"
                android:autofillHints=""
                android:ellipsize="end"
                android:minHeight="48dp"
                android:singleLine="true"
                tools:ignore="LabelFor,TextFields,TextSizeCheck"
                android:text="Password" />


            <EditText
                android:id="@+id/myTxtPassword"
                android:layout_width="@dimen/_257pxh"
                android:layout_height="@dimen/_52pxv"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_32pxh"
                android:layout_marginTop="@dimen/_5pxv"
                android:layout_marginEnd="@dimen/_32pxh"
                android:autofillHints=""
                android:background="@color/gray_401"
                android:hint="@string/enter_your_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:labelFor="@id/myTxtPassword"
                tools:ignore="VisualLintTextFieldSize,VisualLintBounds" />


            <Button
                android:id="@+id/txtForgotPassword"
                style="@style/txtInterregular12"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_20pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_marginEnd="@dimen/_30pxh"
                android:layout_marginBottom="@dimen/_21pxv"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAllCaps="false"
                android:onClick="handleForgetPassword"
                android:textColor="#DD2C00"
                android:text="Forgot Password" />
        </LinearLayout>

        <Button
            android:id="@+id/btnLoginDone"
            style="@style/btnSolidRounded"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/_29pxh"
            android:layout_marginTop="@dimen/_14pxv"
            android:layout_marginEnd="@dimen/_29pxh"
            android:layout_marginBottom="@dimen/_28pxv"
            android:ellipsize="end"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textColor="@color/deep_orange_A400_d8"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_7pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_7pxv"
            android:singleLine="true"
            android:onClick="login"
            android:text="Login" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageEllipseOne"
        android:layout_width="match_parent"
        android:layout_height="304dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_ellipse1" />

</RelativeLayout>
