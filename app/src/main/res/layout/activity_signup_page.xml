<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:andriod="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLoginPage"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".ActivitySignUp">

    <LinearLayout
        android:id="@+id/linearColumnsignup"
        style="@style/groupStylebluegray_100"
        android:layout_width="match_parent"
        android:layout_height="604dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|start"
        android:layout_marginTop="@dimen/_10pxv"
        android:layout_marginBottom="-2dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearColumnusername"
            style="@style/groupStylewhite_A700"
            android:layout_width="match_parent"
            android:layout_height="477dp"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_70pxv"
            android:layout_marginEnd="@dimen/_16pxh"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtUsername"
                style="@style/txtInterregular12"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_36pxh"
                android:layout_marginTop="@dimen/_11pxv"
                android:layout_marginEnd="@dimen/_38pxh"
                android:ellipsize="end"
                android:singleLine="true"
                tools:ignore="TextSizeCheck,TextSizeCheck"
                android:text="Username" />

            <EditText
                android:id="@+id/myUserName"
                android:layout_width="@dimen/_257pxh"
                android:layout_height="@dimen/_52pxv"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_32pxh"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_marginEnd="@dimen/_32pxh"
                android:autofillHints=""
                android:background="@color/gray_401"
                android:hint="@string/enter_your_username"
                android:inputType="textPersonName"
                android:labelFor="@id/myUserName"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/txtPassword"
                style="@style/txtInterregular12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_38pxh"
                android:layout_marginTop="@dimen/_8pxv"
                android:layout_marginEnd="@dimen/_38pxh"
                android:ellipsize="end"
                android:singleLine="true"
                tools:ignore="TextSizeCheck"
                android:text="Password" />

            <EditText
                android:id="@+id/myPassword"
                android:layout_width="@dimen/_257pxh"
                android:layout_height="@dimen/_52pxv"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_32pxh"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_marginEnd="@dimen/_32pxh"
                android:autofillHints=""
                android:background="@color/gray_401"
                android:hint="@string/enter_your_password"
                android:inputType="textPassword"
                android:labelFor="@id/myPassword"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/txtNameofSchool"
                style="@style/txtInterregular12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_38pxh"
                android:layout_marginTop="@dimen/_8pxv"
                android:layout_marginEnd="@dimen/_38pxh"
                android:ellipsize="end"
                android:singleLine="true"
                tools:ignore="TextSizeCheck"
                android:text="Name of the School" />

            <EditText
                android:id="@+id/schoolName"
                android:layout_width="@dimen/_257pxh"
                android:layout_height="@dimen/_52pxv"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_32pxh"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_marginEnd="@dimen/_32pxh"
                android:autofillHints=""
                android:background="@color/gray_401"
                android:hint="@string/enter_the_name_of_the_school"
                android:inputType="text"
                android:labelFor="@id/schoolName"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/txtEmail"
                style="@style/txtInterregular12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_38pxh"
                android:layout_marginTop="@dimen/_8pxv"
                android:layout_marginEnd="@dimen/_38pxh"
                android:ellipsize="end"
                android:singleLine="true"
                tools:ignore="TextSizeCheck"
                android:text="Email" />

            <EditText
                android:id="@+id/textEmail"
                android:layout_width="@dimen/_257pxh"
                android:layout_height="@dimen/_52pxv"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_32pxh"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_marginEnd="@dimen/_32pxh"
                android:autofillHints=""
                android:background="@color/gray_401"
                android:hint="@string/enter_your_email_address"
                android:inputType="textEmailAddress"
                android:labelFor="@id/textEmail"
                tools:ignore="LabelFor" />

            <LinearLayout
                android:id="@+id/linearColumnposition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_38pxh"
                android:layout_marginTop="@dimen/_8pxv"
                android:layout_marginEnd="@dimen/_38pxh"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtPosition"
                    style="@style/txtInterregular12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    tools:ignore="TextSizeCheck"
                    android:text="Position" />

                <RadioGroup
                    android:id="@+id/my_radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3pxh"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_button_1"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_5_5"
                        android:text="@string/supervisor"
                        tools:ignore="TouchTargetSizeCheck" />

                    <RadioButton
                        android:id="@+id/radio_button_2"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/_30pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_5_5"
                        android:text="@string/parent"
                        tools:ignore="TouchTargetSizeCheck" />

                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/txtChildren"
                style="@style/txtInterregular12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_38pxh"
                android:layout_marginTop="@dimen/_8pxv"
                android:layout_marginEnd="@dimen/_10pxh"
                android:ellipsize="end"
                android:singleLine="true"
                tools:ignore="TextSizeCheck"
                android:text="Children" />


            <Spinner
                android:id="@+id/mySpinnerList"
                style="@style/MySpinnerStyle"
                android:layout_width="120dp"
                android:layout_height="28dp"
                android:layout_marginStart="@dimen/_38pxh"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_marginEnd="@dimen/_32pxh"
                android:background="@color/gray_401"
                android:entries="@array/my_list_items"
                android:prompt="@string/name_of_children"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignupDone"
            style="@style/btnSolidRounded"
            android:layout_width="@dimen/_111pxh"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/_29pxh"
            android:layout_marginTop="@dimen/_4pxv"
            android:layout_marginEnd="@dimen/_29pxh"
            android:layout_marginBottom="@dimen/_28pxv"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_7pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_7pxv"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="#212121"
            android:onClick="goToLogin"
            tools:ignore="TextSizeCheck,DuplicateSpeakableTextCheck"
            android:text="Signup" />
    </LinearLayout>

    <ImageView
            android:id="@+id/imageEllipseOne"
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:layout_gravity="top|start"
            android:layout_marginBottom="@dimen/_10pxv"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription"
            android:src="@drawable/img_ellipse1_337x360" />

        <LinearLayout
            android:id="@+id/linearColumnlogin"
            style="@style/groupStylewhite_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_150pxv"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginBottom="@dimen/_311pxv"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearRowlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_40pxh"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_marginEnd="@dimen/_36pxh"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLoginPage"
                    style="@style/txtInterextrabold12_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.44"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:onClick="goToLogin"
                    tools:ignore="TextSizeCheck,TextSizeCheck"
                    android:text="Login" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSignupPage"
                    style="@style/txtInterextrabold12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_70pxh"
                    android:layout_weight="0.44"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:onClick="goToSignup"
                    tools:ignore="TextSizeCheck"
                    android:text="Signup" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
