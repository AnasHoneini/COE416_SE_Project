<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="signupPageVM" type="com.se_application.app.modules.signuppage.data.viewmodel.SignupPageVM"/>
    </data>
    <FrameLayout android:id="@+id/frameSignupPage"
        android:layout_height="match_parent"
        android:layout_width="match_parent" style="@style/groupStylewhite_A700">

        <LinearLayout
            android:id="@+id/linearColumnsignup"
            style="@style/groupStylebluegray_100"
            android:layout_width="match_parent"
            android:layout_height="604dp"
            android:layout_gravity="bottom|start"
            android:layout_marginTop="@dimen/_10pxv"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearColumnusername"
                style="@style/groupStylewhite_A700"
                android:layout_width="match_parent"
                android:layout_height="477dp"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_70pxv"
                android:layout_marginEnd="@dimen/_16pxh"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtUsername"
                    style="@style/txtInterregular12"
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_36pxh"
                    android:layout_marginTop="@dimen/_11pxv"
                    android:layout_marginEnd="@dimen/_38pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{signupPageVM.signupPageModel.txtUsername}"
                    tools:ignore="TextSizeCheck,TextSizeCheck"
                    tools:text="@string/lbl_username" />

                <EditText
                    android:id="@+id/myUserName"
                    android:layout_width="@dimen/_257pxh"
                    android:layout_height="@dimen/_52pxv"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_32pxh"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:layout_marginEnd="@dimen/_32pxh"
                    android:autofillHints=""
                    android:background="@color/gray_401"
                    android:hint="@string/enter_your_username"
                    android:inputType="textPersonName"
                    android:labelFor="@id/myUserName"
                    tools:ignore="LabelFor" />

                <TextView
                    android:id="@+id/txtPassword"
                    style="@style/txtInterregular12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_38pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_marginEnd="@dimen/_38pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{signupPageVM.signupPageModel.txtPassword}"
                    tools:ignore="TextSizeCheck"
                    tools:text="@string/lbl_password" />

                <EditText
                    android:id="@+id/myPassword"
                    android:layout_width="@dimen/_257pxh"
                    android:layout_height="@dimen/_52pxv"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_32pxh"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:layout_marginEnd="@dimen/_32pxh"
                    android:autofillHints=""
                    android:background="@color/gray_401"
                    android:hint="@string/enter_your_password"
                    android:inputType="textPassword"
                    android:labelFor="@id/myPassword"
                    tools:ignore="LabelFor" />

                <TextView
                    android:id="@+id/txtNameofSchool"
                    style="@style/txtInterregular12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_38pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_marginEnd="@dimen/_38pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{signupPageVM.signupPageModel.txtNameofSchool}"
                    tools:ignore="TextSizeCheck"
                    tools:text="@string/lbl_name_of_school" />

                <EditText
                    android:id="@+id/schoolName"
                    android:layout_width="@dimen/_257pxh"
                    android:layout_height="@dimen/_52pxv"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_32pxh"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:layout_marginEnd="@dimen/_32pxh"
                    android:autofillHints=""
                    android:background="@color/gray_401"
                    android:hint="@string/enter_the_name_of_the_school"
                    android:inputType="text"
                    android:labelFor="@id/schoolName"
                    tools:ignore="LabelFor" />

                <TextView
                    android:id="@+id/txtEmail"
                    style="@style/txtInterregular12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_38pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_marginEnd="@dimen/_38pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{signupPageVM.signupPageModel.txtEmail}"
                    tools:ignore="TextSizeCheck"
                    tools:text="@string/lbl_email" />

                <EditText
                    android:id="@+id/textEmail"
                    android:layout_width="@dimen/_257pxh"
                    android:layout_height="@dimen/_52pxv"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_32pxh"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:layout_marginEnd="@dimen/_32pxh"
                    android:autofillHints=""
                    android:background="@color/gray_401"
                    android:hint="@string/enter_your_email_address"
                    android:inputType="textEmailAddress"
                    android:labelFor="@id/textEmail"
                    tools:ignore="LabelFor" />

                <LinearLayout
                    android:id="@+id/linearColumnposition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_38pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_marginEnd="@dimen/_38pxh"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtPosition"
                        style="@style/txtInterregular12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@{signupPageVM.signupPageModel.txtPosition}"
                        tools:ignore="TextSizeCheck"
                        tools:text="@string/lbl_position" />

                    <RadioGroup
                        android:id="@+id/my_radio_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3pxh"
                        android:layout_marginTop="@dimen/_2pxv"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_button_1"
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="@dimen/_1pxv"
                            android:layout_marginBottom="@dimen/_1pxv"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_5_5"
                            android:onClick="onRadioButtonClicked"
                            android:text="@string/supervisor"
                            tools:ignore="TouchTargetSizeCheck" />

                        <RadioButton
                            android:id="@+id/radio_button_2"
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="@dimen/_30pxh"
                            android:layout_marginTop="@dimen/_1pxv"
                            android:layout_marginBottom="@dimen/_1pxv"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_5_5"
                            android:onClick="onRadioButtonClicked"
                            android:text="@string/parent"
                            tools:ignore="TouchTargetSizeCheck" />

                    </RadioGroup>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtChildren"
                    style="@style/txtInterregular12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_38pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{signupPageVM.signupPageModel.txtChildren}"
                    tools:ignore="TextSizeCheck"
                    tools:text="@string/lbl_children" />


                <Spinner
                    android:id="@+id/mySpinnerList"
                    style="@style/MySpinnerStyle"
                    android:layout_width="120dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="@dimen/_38pxh"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:layout_marginEnd="@dimen/_32pxh"
                    android:background="@color/gray_401"
                    android:entries="@array/my_list_items"
                    android:prompt="@string/name_of_children"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSignup"
                style="@style/btnSolidRounded"
                android:layout_width="@dimen/_111pxh"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/_29pxh"
                android:layout_marginTop="@dimen/_4pxv"
                android:layout_marginEnd="@dimen/_29pxh"
                android:layout_marginBottom="@dimen/_28pxv"
                android:ellipsize="end"
                android:gravity="center"
                android:onClick="onSubmitButtonClick"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_7pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_7pxv"
                android:singleLine="true"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="#212121"
                tools:ignore="TextSizeCheck,DuplicateSpeakableTextCheck"
                tools:text="@string/lbl_signup" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageEllipseOne"
            cornerRadius="@{@dimen/_252pxh}"
            imageRes="@{@drawable/img_ellipse1_337x360}"
            android:layout_width="match_parent"
            android:layout_height="252dp"
            android:layout_gravity="top|start"
            android:layout_marginBottom="@dimen/_10pxv"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription"
            tools:src="@drawable/img_ellipse1_337x360" />

        <LinearLayout
            android:id="@+id/linearColumnlogin"
            style="@style/groupStylewhite_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_230pxv"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginBottom="@dimen/_311pxv"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearRowlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_40pxh"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_marginEnd="@dimen/_36pxh"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnLogin2"
                    style="@style/txtInterextrabold12_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.44"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{signupPageVM.signupPageModel.txtLogin}"
                    tools:ignore="TextSizeCheck,TextSizeCheck"
                    tools:text="@string/lbl_login" />

                <Button
                    android:id="@+id/btnSignup2"
                    style="@style/txtInterextrabold12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_70pxh"
                    android:layout_weight="0.44"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{signupPageVM.signupPageModel.txtSignupOne}"
                    tools:ignore="TextSizeCheck"
                    tools:text="@string/lbl_signup" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</layout>
