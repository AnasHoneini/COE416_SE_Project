<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="signupPageVM" type="com.se_application.app.modules.signuppage.data.viewmodel.SignupPageVM"/>
    </data>
    <FrameLayout android:id="@+id/frameSignupPage"
        android:layout_height="match_parent"
        android:layout_width="match_parent" style="@style/groupStylewhite_A700">

        <LinearLayout
            android:id="@+id/linearColumnsignup"
            style="@style/groupStylebluegray_100"
            android:layout_width="match_parent"
            android:layout_height="545dp"
            android:layout_gravity="bottom|start"
            android:layout_marginTop="@dimen/_10pxv"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearColumnusername"
                style="@style/groupStylewhite_A700"
                android:layout_width="match_parent"
                android:layout_height="386dp"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_105pxv"
                android:layout_marginEnd="@dimen/_16pxh"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtUsername"
                    style="@style/txtInterregular12"
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_22pxh"
                    android:layout_marginTop="@dimen/_11pxv"
                    android:layout_marginEnd="@dimen/_38pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{signupPageVM.signupPageModel.txtUsername}"
                    tools:text="@string/lbl_username" />

                <View
                    android:id="@+id/lineLineFive"
                    android:layout_width="@dimen/_257pxh"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_32pxh"
                    android:layout_marginTop="@dimen/_25pxv"
                    android:layout_marginEnd="@dimen/_32pxh"
                    android:background="@color/black_900" />

                <TextView
                    android:id="@+id/txtPassword"
                    style="@style/txtInterregular12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_38pxh"
                    android:layout_marginTop="@dimen/_17pxv"
                    android:layout_marginEnd="@dimen/_38pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{signupPageVM.signupPageModel.txtPassword}"
                    tools:text="@string/lbl_password" />

                <View
                    android:id="@+id/lineLineSix"
                    android:layout_width="@dimen/_257pxh"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_32pxh"
                    android:layout_marginTop="@dimen/_25pxv"
                    android:layout_marginEnd="@dimen/_32pxh"
                    android:background="@color/black_900" />

                <TextView
                    android:id="@+id/txtNameofSchool"
                    style="@style/txtInterregular12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_38pxh"
                    android:layout_marginTop="@dimen/_20pxv"
                    android:layout_marginEnd="@dimen/_38pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{signupPageVM.signupPageModel.txtNameofSchool}"
                    tools:text="@string/lbl_name_of_school" />

                <View
                    android:id="@+id/lineLineThree"
                    android:layout_width="@dimen/_257pxh"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_32pxh"
                    android:layout_marginTop="@dimen/_26pxv"
                    android:layout_marginEnd="@dimen/_32pxh"
                    android:background="@color/black_900" />

                <TextView
                    android:id="@+id/txtEmail"
                    style="@style/txtInterregular12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_38pxh"
                    android:layout_marginTop="@dimen/_19pxv"
                    android:layout_marginEnd="@dimen/_38pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{signupPageVM.signupPageModel.txtEmail}"
                    tools:text="@string/lbl_email" />

                <View
                    android:id="@+id/lineLineFour"
                    android:layout_width="@dimen/_257pxh"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_32pxh"
                    android:layout_marginTop="@dimen/_26pxv"
                    android:layout_marginEnd="@dimen/_32pxh"
                    android:background="@color/black_900" />

                <LinearLayout
                    android:id="@+id/linearColumnposition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_38pxh"
                    android:layout_marginTop="@dimen/_23pxv"
                    android:layout_marginEnd="@dimen/_38pxh"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtPosition"
                        style="@style/txtInterregular12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@{signupPageVM.signupPageModel.txtPosition}"
                        tools:text="@string/lbl_position" />

                    <LinearLayout
                        android:id="@+id/linearRowellipseseventyone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_11pxv"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/viewEllipseSeventyOne"
                            android:layout_width="@dimen/_11pxh"
                            android:layout_height="@dimen/_11pxh"
                            android:layout_marginTop="@dimen/_1pxv"
                            android:layout_marginBottom="@dimen/_3pxv"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_5_5" />

                        <TextView
                            android:id="@+id/txtSupervisor"
                            style="@style/txtInterregular12"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10pxh"
                            android:layout_marginTop="@dimen/_1pxv"
                            android:layout_weight="0.51"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@{signupPageVM.signupPageModel.txtSupervisor}"
                            tools:text="@string/lbl_supervisor" />

                        <View
                            android:id="@+id/viewEllipseSeventyTwo"
                            android:layout_width="@dimen/_11pxh"
                            android:layout_height="@dimen/_11pxh"
                            android:layout_marginStart="@dimen/_30pxh"
                            android:layout_marginTop="@dimen/_1pxv"
                            android:layout_marginBottom="@dimen/_3pxv"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_5_5" />

                        <TextView
                            android:id="@+id/txtParent"
                            style="@style/txtInterregular12"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12pxh"
                            android:layout_marginBottom="@dimen/_1pxv"
                            android:layout_weight="0.31"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@{signupPageVM.signupPageModel.txtParent}"
                            tools:text="@string/lbl_parent" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtChildren"
                        style="@style/txtInterregular12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15pxv"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@{signupPageVM.signupPageModel.txtChildren}"
                        tools:text="@string/lbl_children" />
                </LinearLayout>

                <View
                    android:id="@+id/lineLineSeven"
                    android:layout_width="@dimen/_257pxh"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_32pxh"
                    android:layout_marginTop="@dimen/_25pxv"
                    android:layout_marginEnd="@dimen/_32pxh"
                    android:layout_marginBottom="@dimen/_13pxv"
                    android:background="@color/black_900" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSignup"
                style="@style/btnSolidRounded"
                android:layout_width="@dimen/_111pxh"
                android:layout_height="@dimen/_54pxv"
                android:layout_marginStart="@dimen/_26pxh"
                android:layout_marginTop="@dimen/_12pxv"
                android:layout_marginEnd="@dimen/_26pxh"
                android:layout_marginBottom="@dimen/_7pxv"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_7pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_7pxv"
                android:singleLine="true"
                android:text="@string/lbl_signup"
                android:textAllCaps="false"
                tools:text="@string/lbl_signup" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageEllipseOne"
            cornerRadius="@{@dimen/_252pxh}"
            imageRes="@{@drawable/img_ellipse1_337x360}"
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:layout_gravity="top|start"
            android:layout_marginBottom="@dimen/_10pxv"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription"
            tools:src="@drawable/img_ellipse1_337x360" />
        <LinearLayout android:id="@+id/linearColumnlogin"
            android:layout_gravity="top|center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_311pxv"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_311pxv"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylewhite_1">

            <LinearLayout
                android:id="@+id/linearRowlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_60pxh"
                android:layout_marginTop="@dimen/_22pxv"
                android:layout_marginEnd="@dimen/_36pxh"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtLogin"
                    style="@style/txtInterextrabold12_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.44"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{signupPageVM.signupPageModel.txtLogin}"
                    tools:text="@string/lbl_login" />

                <TextView
                    android:id="@+id/txtSignupOne"
                    style="@style/txtInterextrabold12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_110pxh"
                    android:layout_weight="0.56"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{signupPageVM.signupPageModel.txtSignupOne}"
                    tools:text="@string/lbl_signup" />
            </LinearLayout>
            <LinearLayout android:id="@+id/linearRowlineone"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8pxv"
                android:layout_marginEnd="@dimen/_33pxh"
                android:layout_marginStart="@dimen/_36pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <View android:background="@color/deep_orange_201"
                    android:id="@+id/lineLineOne"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_weight="0.5" android:layout_width="0dp"/>
                <View android:background="@color/deep_orange_A400_d8"
                    android:id="@+id/lineLineTwo"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_marginStart="@dimen/_37pxh"
                    android:layout_weight="0.5" android:layout_width="0dp"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />
</layout>
